<%= render 'application/errors' , object: @movie %>

<% if current_user.theater_owner %>
    <h2> All movies</h2>
<% else %>
    <h1> Movies appropriate for your age : <%= current_user.age %> </h1> 
<% end %>

<% @movies.each do |movie| %>
    <h3>  <%= link_to  movie.title, movie_path(movie)  %> <br> </h3>
<% end %>

<% if current_user.theater_owner %>
    <%= link_to "Add a movie", new_movie_path %> 
<% end %>